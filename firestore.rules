rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isFamilyMember(userId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.family.hasAny([request.auth.uid]);
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document OR any user document (for family invites)
      // This allows searching for users by email to invite them
      allow read: if isAuthenticated();
      
      // Users can create their own document on signup
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['name', 'email', 'createdAt', 'timezone', 'family', 'fcmTokens']);
      
      // Users can update their own document
      allow update: if isOwner(userId);
      
      // Users can delete their own document
      allow delete: if isOwner(userId);
    }
    
    // Medications collection
    match /medications/{medId} {
      // Users can read their own medications or medications of family members
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     isFamilyMember(resource.data.userId));
      
      // Users can create medications for themselves
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['userId', 'name', 'createdAt']);
      
      // Users can update their own medications
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
      
      // Users can delete their own medications
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      // Users can read their own schedules or schedules of family members
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     isFamilyMember(resource.data.userId));
      
      // Users can create schedules for themselves
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['userId', 'medId', 'startDate', 'times', 'active']);
      
      // Users can update their own schedules
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
      
      // Users can delete their own schedules
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // Dose logs collection
    match /doseLogs/{logId} {
      // Users can read their own dose logs or logs of family members
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     isFamilyMember(resource.data.userId));
      
      // Users can create dose logs for themselves (client-side scheduling)
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['userId', 'scheduleId', 'medId', 'scheduledAt', 'status']);
      
      // Users can update their own dose logs (mark as taken, snooze, skip)
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid &&
                      // Only allow updating specific fields
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['status', 'takenAt', 'snoozedUntil']);
      
      // Users can delete their own dose logs
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // Notifications collection (optional)
    match /notifications/{notifId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && 
                    resource.data.userId == request.auth.uid;
      
      // Only Cloud Functions can create/update notifications
      allow write: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

